<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="mu.organyze.ProfessionActivity"
    tools:layout_editor_absoluteY="81dp">


    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleType="centerCrop"

        android:src="@drawable/background"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/question_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="74dp"
        android:layout_marginStart="74dp"
        android:fontFamily="@font/eutemia"
        android:gravity="center"
        android:text="Profession?"
        android:textColor="#ffffff"
        android:textSize="64dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bartender_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <Button
        android:id="@+id/bartender_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="17dp"
        android:background="#80e03b11"
        android:onClick="onClick"
        android:text="Bartender"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/store_button"
        app:layout_constraintEnd_toEndOf="@+id/store_button"
        app:layout_constraintStart_toStartOf="@+id/store_button"
        app:layout_constraintTop_toBottomOf="@+id/question_textview" />

    <Button
        android:id="@+id/store_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="17dp"
        android:background="#80f97320"
        android:onClick="onClick"
        android:text="Store Manager"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/warehouse_button"
        app:layout_constraintEnd_toEndOf="@+id/family_button"
        app:layout_constraintStart_toStartOf="@+id/family_button"
        app:layout_constraintTop_toBottomOf="@+id/bartender_button" />

    <Button
        android:id="@+id/warehouse_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="#808cf907"
        android:onClick="onClick"
        android:text="Warehouse Manager"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/family_button"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/store_button" />

    <Button
        android:id="@+id/family_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:background="#8007f97b"
        android:onClick="onClick"
        android:text="Family"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/gym_button"
        app:layout_constraintEnd_toEndOf="@+id/gym_button"
        app:layout_constraintStart_toStartOf="@+id/gym_button"
        app:layout_constraintTop_toBottomOf="@+id/warehouse_button" />

    <Button
        android:id="@+id/gym_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:background="#802283d8"
        android:onClick="onClick"
        android:text="Gym"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/retail_button"
        app:layout_constraintEnd_toEndOf="@+id/retail_button"
        app:layout_constraintStart_toStartOf="@+id/retail_button"
        app:layout_constraintTop_toBottomOf="@+id/family_button" />

    <Button
        android:id="@+id/retail_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="25dp"
        android:background="#80be82e5"
        android:onClick="onClick"
        android:text="Retail Manager"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogOut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gym_button" />


    <Button
        android:id="@+id/buttonLogOut"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="36dp"
        android:background="#80020000"
        android:onClick="onClick"
        android:text="LogOut"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/retail_button"
        app:layout_constraintStart_toStartOf="@+id/retail_button"
        app:layout_constraintTop_toBottomOf="@+id/retail_button" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="-15dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="603dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_begin="192dp"
        app:layout_constraintTop_toBottomOf="@+id/guideline4" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintGuide_begin="78dp"
        app:layout_constraintTop_toBottomOf="@+id/guideline5" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintGuide_begin="311dp"
        app:layout_constraintTop_toBottomOf="@+id/guideline3" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/background" />
</android.support.constraint.ConstraintLayout>
